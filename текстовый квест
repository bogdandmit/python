import pyautogui
import time
x=input("Вы появились в огромном подземелье! Идти прямо или выйти из подземелья? ")
while x!="выйти" and x!="прямо":
    x=input("Вы появились в огромном подземелье! Идти прямо или выйти из подземелья? ")
if x=="выйти":
    x1=input("Вы решили выйти, но увидели, что перед выходом огромный камень.\nПопробовать отодвинуть или идти в глубь? ")
    if x1=="отодвинуть":
        print("Вы потратили много сил, но камень слишком тяжёл. Вы пошли в глубь... ")
        print("*Говорят, что в этом подземелье есть монстры.\nНо за ними, в глубине хранятся богатства! ")
        x2=input("Вы видете перед собой доспехи, но это лишний вес, а вы итак устали.\nПоднять или пойти дальше? ")
        if x2=="поднять":
            print("Вы подняли доспехи, но чувствуете как идти стало сложнее.")
            print("На пути вы встретили гоблина, у него меч, а у вас доспехи. Он напал на вас.\nВ этом сражении из-за того что вы устали, победил гоблин. ")
            print("Вы проиграли. Спасибо за игру!")
        if x2=="пойти дальше":
            print("На пути вы встретили гоблина, у него меч.\nОн напал на вас.В этом сражении победил гоблин. ")
            print("Вы проиграли. Спасибо за игру!")
    if x1=="идти в глубь":
        print("Вы пошли в глубь... ")
        print("*Говорят, что в этом подземелье есть монстры.\nНо за ними, в глубине хранятся богатства! ")
        x2==input("Вы видете перед собой доспехи.\nПоднять или пойти дальше? ")
        if x2=="поднять":
            print("Вы подняли доспехи, теперь у вас есть защита. ")
            x3==input("на пути вы встретили гоблина, у него меч, а у вас доспехи. Атаковать или убежать?\n*При его убийстве вы получите меч.")
            if x3=="атаковать":
                print("Гоблин не смог пробить вас своим мечём, вы победили! Теперь у вас есть меч!")
if x=="прямо":        
    print("Вы пошли в глубь... ")                       
