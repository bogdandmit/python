Water=100
Eat=100
x=[]
d=["отломать ветку от дерева", "подойти к реке", "поднять камень"]
print("Вы появились в безграничном мире!\nЧтобы начать выберете одно из предложенных действий.")
for i in d:
    print(i)
r=input()
if r=="отломать ветку от дерева":
    x.append("ветка")
    print("ветка добавлена в инвентарь")
if r=="подойти к реке":
    print("Вы попробовали воду, но поняли, что она не подойдёт для питья.")
