Water=100
Eat=100
x=[]
d=["отломать ветку от дерева", "подойти к реке", "поднять камень", "инвентарь"]
print("Вы появились в безграничном мире!\nЧтобы начать выберете одно из предложенных действий.")
for i in d:
    print(i)
r=input()
while r!="отломать ветку от дерева" and r!="подойти к реке" and r!="поднять камень":
    r=input()
if r=="отломать ветку от дерева":
    x.append("ветка")
    Water=Water-10
    Eat=Eat-15
    print("ветка добавлена в инвентарь")
    d.remove("отломать ветку от дерева")
    for i in d:
        print(i)
    r=input("Введите следующее действие" )
    if r=="подойти к реке":
        Water=Water-10
        Eat=Eat-15
        print("Вы попробовали воду, но поняли, что она не подойдёт для питья.") 
        d.remove("подойти к реке")
        for i in d:
            print(i)
        r=input("Введите следующее действие" )
        if r=="поднять камень":
            Water=Water-10
            Eat=Eat-15
            x.append("камень")
            print("камень добавлен в инвентарь")
            d.remove("поднять камень")
            r=0
    if r=="поднять камень":
        x.append("камень")
        print("камень добавлен в инвентарь")
        d.remove("поднять камень")
        for i in d:
            print(i)
        r=input("Введите следующее действие" )
        if r=="подойти к реке":
            Water=Water-10
            Eat=Eat-15
            print("Вы попробовали воду, но поняли, что она не подойдёт для питья.") 
            d.remove("подойти к реке")

if r=="подойти к реке":
    print("Вы попробовали воду, но поняли, что она не подойдёт для питья.") 
    d.remove("подойти к реке")
    r=input("Введите следующее действие" )
    for i in d:
        print(i)
    r=input("Введите следующее действие" )
    if r=="поднять камень":
        x.append("камень")
        print("камень добавлен в инвентарь")
        d.remove("поднять камень")
        for i in d:
            print(i)
        r=input("Введите следующее действие" )
        if r=="отломать ветку от дерева":
            x.append("ветка")
            Water=Water-10
            Eat=Eat-15
            print("ветка добавлена в инвентарь")
            d.remove("отломать ветку от дерева")
            for i in d:
                print(i)
            r=input("Введите следующее действие" )


